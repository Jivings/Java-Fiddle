# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Get saved projects
GET     /:uuid                      controllers.Project.get(uuid: String)
# Save a project
POST    /new/                       controllers.Project.newProject()
# Save a revision
POST    /:uuid/save                 controllers.Project.save(uuid: String)
# Get a revision
GET     /:uuid/:rev                 controllers.Project.patch(uuid: String, rev: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
